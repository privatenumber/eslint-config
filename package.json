{
	"name": "@pvtnbr/eslint-config",
	"version": "0.0.0-semantic-release",
	"publishConfig": {
		"access": "public"
	},
	"license": "MIT",
	"repository": "privatenumber/eslint-config",
	"funding": "https://github.com/privatenumber/eslint-config?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"files": [
		"dist"
	],
	"main": "./dist/index.js",
	"exports": {
		".": "./dist/index.js",
		"./node": "./dist/node.js"
	},
	"scripts": {
		"build": "rm -rf dist; esbuild src/**/*.ts --format=cjs --outdir=dist",
		"type-check": "tsc --noEmit",
		"lint": "eslint --cache .",
		"test": "pnpm build && tsx tests",
		"dev:build": "pnpm build --watch",
		"dev:test": "tsx watch tests",
		"dev": "run-p 'dev:*'",
		"prepack": "pnpm build && clean-pkg-json"
	},
	"engines": {
		"node": ">=16.18.0"
	},
	"peerDependencies": {
		"eslint": "^7.15.0 || ^8.0.0"
	},
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^5.59.6",
		"@typescript-eslint/parser": "^5.59.6",
		"confusing-browser-globals": "^1.0.11",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jsonc": "^2.8.0",
		"eslint-plugin-markdown": "^3.0.0",
		"eslint-plugin-n": "^16.0.0",
		"eslint-plugin-no-use-extend-native": "^0.5.0",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-regexp": "^1.15.0",
		"eslint-plugin-unicorn": "^47.0.0",
		"eslint-plugin-vue": "^9.13.0",
		"get-tsconfig": "^4.5.0"
	},
	"devDependencies": {
		"@types/confusing-browser-globals": "^1.0.0",
		"@types/eslint": "^8.37.0",
		"@types/node": "^20.1.7",
		"@types/react": "^18.2.6",
		"clean-pkg-json": "^1.2.0",
		"esbuild": "^0.17.19",
		"eslint": "^8.40.0",
		"manten": "^0.7.0",
		"npm-run-all": "^4.1.5",
		"react": "^18.2.0",
		"tsx": "^3.12.7",
		"typescript": "^5.0.4"
	},
	"eslintConfig": {
		"extends": [
			".",
			"./dist/node"
		],
		"ignorePatterns": [
			"tests/*/fixtures/**/fail.*",
			"tests/*/fixtures/**/fail/**"
		]
	}
}
