{
	"name": "@pvtnbr/eslint-config",
	"version": "0.0.0",
	"private": true,
	"license": "MIT",
	"repository": "privatenumber/eslint-config",
	"funding": "https://github.com/privatenumber/eslint-config?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"lint": "eslint ."
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint",
			"pnpm run -r test"
		]
	},
	"devDependencies": {
		"eslint": "^7.15.0",
		"husky": "^4.3.6",
		"lerna": "^3.22.1",
		"lint-staged": "^10.5.3",
		"jest": "^26.6.3"
	},
	"eslintConfig": {
		"extends": "./packages/base",
		"ignorePatterns": ["packages/*/test/fixtures/*"]
	}
}
