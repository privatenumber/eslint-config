{
	"compilerOptions": {
		"noEmit": true,
		"strict": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"skipLibCheck": true,
		"allowJs": true,
	},
	"include": [
		"src",
		"tests",
		"eslint.config.js",
	],
	"exclude": [
		"tests/*/fixtures"
	],
}
